{
  "name": "vscode-eufemia",
  "displayName": "DNB Eufemia Tools",
  "description": "DNB Eufemia Design System Extension",
  "categories": [],
  "version": "1.2.2",
  "publisher": "dnbexperience",
  "license": "SEE LICENSE IN LICENSE",
  "licenseUrl": "LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/dnbexperience/vscode-eufemia.git"
  },
  "bugs": {
    "url": "https://github.com/dnbexperience/vscode-eufemia/issues"
  },
  "homepage": "https://github.com/dnbexperience/vscode-eufemia",
  "icon": "assets/Eufemia-Logo-128.png",
  "engines": {
    "vscode": "^1.70.x"
  },
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "release": "yarn compile && vsce publish",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/__tests__/runTest.js"
  },
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:sass",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.eufemia.px-to-spacing",
        "title": "Eufemia: px to spacing types"
      },
      {
        "command": "extension.eufemia.rem-to-spacing",
        "title": "Eufemia: rem to spacing types"
      },
      {
        "command": "extension.eufemia.px-to-rem",
        "title": "Eufemia: px to rem"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Eufemia Configuration",
      "properties": {
        "eufemia.rootFontSize": {
          "type": "number",
          "default": 16,
          "description": "%eufemia.rootFontSize%"
        },
        "eufemia.fixedDigits": {
          "type": "number",
          "default": 4,
          "description": "%eufemia.fixedDigits%"
        },
        "eufemia.autoRemovePrefixZero": {
          "type": "boolean",
          "default": true,
          "description": "%eufemia.autoRemovePrefixZero%"
        },
        "eufemia.ingoresViaCommand": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "%eufemia.ingoresViaCommand%"
        },
        "eufemia.addMark": {
          "type": "boolean",
          "default": false,
          "description": "%eufemia.addMark%"
        },
        "eufemia.hover": {
          "type": "string",
          "enum": [
            "disabled",
            "always",
            "onlyMark"
          ],
          "default": "onlyMark",
          "markdownEnumDescriptions": [
            "%eufemia.hover.disabled%",
            "%eufemia.hover.always%",
            "%eufemia.hover.onlyMark%"
          ],
          "description": "%eufemia.hover%"
        },
        "eufemia.ingores": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "%eufemia.ingores%"
        },
        "eufemia.languages": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "%eufemia.languages%"
        },
        "eufemia.spacingProperties": {
          "type": "array",
          "default": [
            "margin",
            "padding",
            "top",
            "bottom",
            "left",
            "right",
            "inset"
          ],
          "items": {
            "type": "string"
          },
          "description": "%eufemia.spacingProperties%"
        },
        "eufemia.currentLine": {
          "type": "string",
          "enum": [
            "disabled",
            "show"
          ],
          "default": "show",
          "markdownEnumDescriptions": [
            "%eufemia.currentLine.disabled%",
            "%eufemia.currentLine.show%"
          ],
          "description": "%eufemia.currentLine%"
        },
        "eufemia.remHover": {
          "type": "boolean",
          "default": true,
          "description": "%eufemia.remHover%"
        }
      }
    },
    "colors": [
      {
        "id": "extension.eufemia.trailingLineForegroundColor",
        "description": "Specifies the foreground color of the annotation for the current line",
        "defaults": {
          "dark": "#99999980",
          "light": "#99999980",
          "highContrast": "#99999999"
        }
      },
      {
        "id": "extension.eufemia.trailingLineBackgroundColor",
        "description": "Specifies the background color of the annotation for the current line",
        "defaults": {
          "dark": "#00000000",
          "light": "#00000000",
          "highContrast": "#00000000"
        }
      }
    ]
  },
  "dependencies": {
    "@dnb/eufemia": "^9.45.0",
    "jsonc-parser": "^3.2.0"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "vsce": "^2.15.0",
    "vscode-nls": "^5.2.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "packageManager": "yarn@1.22.1"
}
